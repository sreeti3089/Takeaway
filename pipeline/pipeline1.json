{
	"name": "pipeline1",
	"properties": {
		"activities": [
			{
				"name": "CopyData",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "files//item.json"
					},
					{
						"name": "Destination",
						"value": "dbo.stg_review"
					}
				],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"additionalColumns": [
							{
								"name": "helpfulnew",
								"value": "$$COLUMN:$.helpful[0]"
							},
							{
								"name": "helpfulnew1",
								"value": {
									"value": "@join(['helpful'],',')",
									"type": "Expression"
								}
							}
						],
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "AzureSqlSink"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['reviewerID']"
								},
								"sink": {
									"name": "reviewer_ID",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['asin']"
								},
								"sink": {
									"name": "product_id",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['reviewerName']"
								},
								"sink": {
									"name": "reviewer_Name",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['reviewText']"
								},
								"sink": {
									"name": "reviewText",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['overall']"
								},
								"sink": {
									"name": "overall",
									"type": "Decimal"
								}
							},
							{
								"source": {
									"path": "$['summary']"
								},
								"sink": {
									"name": "summary",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['unixReviewTime']"
								},
								"sink": {
									"name": "unixReviewTime",
									"type": "Int32"
								}
							},
							{
								"source": {
									"path": "$['reviewTime']"
								},
								"sink": {
									"name": "reviewTime",
									"type": "DateTime"
								}
							}
						],
						"collectionReference": "",
						"mapComplexValuesToString": false
					}
				},
				"inputs": [
					{
						"referenceName": "ds_Toys_Games",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Toys_Games",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}